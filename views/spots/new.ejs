<% layout('layout/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Spot</h1>
        <div class="col-6 offset-3">
            <form action="/spots" method="POST" novalidate class="validate-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="spot[title]" id="title" required>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="spot[location]" id="location" required>

                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">$</span>
                    <input type="number" class="form-control" id="price" placeholder="0.00" aria-label="Username" name="spot[price]" required>
                        
                </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="spot[description]" id="description" name="spot[description]" required></textarea>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" name="spot[image]" id="image" required>

                </div> <button class="btn btn-success mb-3">New Spot</button>
                <a href="/spots">Cancel</a>
            </form>
        </div>
    </div>

