<% layout('layout/boilerplate') %>
    <div class="row">
        <div class="col-12">
            <h1 class="offset-6">Spots</h1>
            <% for (let spot of spots){%>
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-fluid" src="<%= spot.image %> " alt="">
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title mt-3">
                                <%= spot.title %>
                            </h5>
                            <p class="card-text">
                                <%= spot.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <%= spot.location %>
                                </small>
                            </p>
                            <a href="/spots/<%= spot.id %>" class="btn btn-primary">
                                <%= spot.title %>
                            </a>
                        </div>
                    </div>
                </div>
            <%}%>
        </div>
    </div>